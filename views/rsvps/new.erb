<h1>New RSVP</h1>

<form method="POST" action="/rsvps">
  <ul>
    <li>
      <label for="name">Name</label>
      <input type="text" name="name" id="name"/>
    </li>
    <li>
      <label for="email">Email</label>
      <input type="email" name="email" id="email"/>
    </li>
    <li>
      <label for="number_of_guests">Number of Guests</label>
      <select name="number_of_guests" id="number_of_guests">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
      </select>
    </li>
    <li>
      <label>Dinner Choice</label>
      <br />
      <label for="dinner_chicken">Chicken</label>
      <input type="radio" name="dinner_choice" value="chicken" id="dinner_chicken"/>
      <label for="dinner_fish">Fish</label>
      <input type="radio" name="dinner_choice" value="fish" id="dinner_fish"/>
    </li>
  </ul>
  <li>
    <input type="submit" value="RSVP" />
  </li>
</form>